[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    reports,
    .allure,
    node_modules,
    *.egg-info

# Ignore specific errors
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    conftest.py:F401,F811

# Enable specific checks
select = B,C,E,F,W,T4,B9

# Show source code for each error
show-source = True

# Show pep8 error code
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
